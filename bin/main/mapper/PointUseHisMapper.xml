<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bogue.assignment.api.mapper.PointUseHisMapper">

    <insert id="insertPointUseHis">
        INSERT INTO POINT_USE_HIS (
            USE_POINT_ID, EARN_POINT_ID,
            ORDER_NO, AMOUNT
        )
        VALUES (
            #{usePointId}, #{earnPointId},
            #{orderNo}, #{amount}
        )
    </insert>

    <select id="selectPointUseHis" resultType="com.bogue.assignment.api.dto.PointUseHisDto">
        SELECT *
        FROM POINT_USE_HIS
        WHERE USE_POINT_ID = #{usePointId}
    </select>
    
    <delete id="deletePointUseHis">
	    DELETE FROM POINT_USE_HIS
	    WHERE USE_POINT_ID = #{usePointId}
	</delete>

	<update id="updateAmount">
	    UPDATE POINT_USE_HIS
	    SET AMOUNT = #{amount}
	    WHERE USE_POINT_ID = #{usePointId}
	</update>

</mapper>