<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bogue.assignment.api.mapper.UserPointMapper">

    <select id="selectUserPoint" resultType="com.bogue.assignment.api.dto.UserPointDto">
        SELECT USER_ID, POINT_TOTAL
        FROM USER_POINT
        WHERE USER_ID = #{userId}
        FOR UPDATE
    </select>

    <insert id="insertUserPoint">
        INSERT INTO USER_POINT(USER_ID, POINT_TOTAL)
        VALUES (#{userId}, #{pointTotal})
    </insert>

    <update id="updateBalanceToUserPoint">
        UPDATE USER_POINT
        SET POINT_TOTAL = #{pointTotal}
        WHERE USER_ID = #{userId}
    </update>

</mapper>